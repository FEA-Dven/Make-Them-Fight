/**index.wxss**/
.box{
  width:100%;
  box-sizing: border-box;
  background-color:#efe9c4;
  position:relative;
}
.title{
	width:100%;
	color:#000;
	font-size:24px;
	font-weight:bold;
	text-align: center;
	float: left;
	margin-top: 20px;
}
.scorediv{
	width: 40%;
	height: 160px;
	background-color: #000;
	color:white;
	border-radius: 6px;
	margin-left: 30%;
	float: left;
	margin-top: 20px;
}
.word{
	width: 100%;
	height: 80px;
	float: left;
	color:white;
	font-size: 30px;
	line-height: 80px;
	text-align: center;
}
.score{
	width: 100%;
	height: 60px;
	float: left;
	color:white;
	font-size: 36px;
	margin-top: 10px;
	font-weight:800;
	line-height: 60px;
	text-align: center;
}
.tryagain{
	width: 40%;
	height: 40px;
	float: left;
	margin-left: 30%;
	background-color: #000;
	color:white;
	margin-top: 30px;
	font-size: 16px;
	line-height: 40px;
}
.backhome{
	width: 40%;
	height: 40px;
	float: left;
	margin-left: 30%;
	background-color: #000;
	color:white;
	margin-top: 30px;
	font-size: 16px;
	line-height: 40px;
}