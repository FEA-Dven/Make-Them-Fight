/**index.wxss**/
.box{
	width:100%;
	float:left;
	background-color:black;
	position:relative;
	background-color:black;
}

.ground{
	width:100%;
	margin-bottom:10px;
	float:left;
	position:relative;
}
.score{
	position:absolute;
	right:10px;
	top:0;
	font-size:20px;
	color:#000;
	font-weight:bold;
	z-index:2;
}
.player{
	width:20px;
	height:50px;
	position:absolute;
	bottom:0;
	left:0;
}
.jian{
	width:50px;
	height:50px;
	position:absolute;
	bottom:20px;
	left:12px;
	transform-origin:0 100%;
}
.enemy{
	width:20px;
	height:50px;
	position:absolute;
	bottom:0;
	right:0;
}
.dart{
	width:20px;
	height:20px;
	position:absolute;
	bottom:20px;
}
.none{
	display:none;
}
.dead{
	width:50px;
	height:30px;
	position:absolute;
	bottom:0;
	left:0;
}
.modal{
	z-index: 10;
}
.hand{
	position: absolute;
	bottom:10px;
	right:8px;
	width: 30px;
	height: 40px;
}
.hide{
	display:none;
}
.rplayer{
	width:80px;
	height: 80px;
	position:absolute;
	bottom:0;
	left:0;
}